<section class="breadcrumb-area gradient-overlay" style="background: url(<%= asset_path 'banner/3.jpg'%>);">
  <div class="container">
      <div class="row">
          <div class="col-xl-12">
              <div class="site-breadcrumb">
                  <h2>Register Now</h2>
              </div>
          </div>
      </div>
  </div>
</section>

 <!--Signup Section -->
<section class="section-padding blue-bg shaded-bg">
  <div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 centered">
            <div class="section-title cl-white">
                <h4><span>New</span>Create account</h4>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
          <div class="site-form mb-30">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %> 
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-sm-6">
                      <%=f.text_field :first_name, autocomplete: "first_name", placeholder: "First Name" %>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-sm-6">
                        <%=f.text_field :last_name, autocomplete: "last_name", placeholder: "Last Name" %>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-sm-6">
                      <%=f.email_field :email, autocomplete: "email", placeholder: "Email" %>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-sm-6">
                      <%=f.phone_field :phone_number, autocomplete: "phone_number", placeholder: "Phone Number" %>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-sm-6">
                      <%=f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-sm-6">
                        <%=f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Again" %>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-sm-12">
                        <%= f.submit "Register now", class: "bttn-mid btn-fill w-100" %>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-sm-12">
                        <div class="extra-links">
                            <%=link_to "Login Account?", :new_user_session, class: "cl-white" %>
                        </div>
                    </div>
                </div>
              <%end%>
          </div>
        </div>
    </div>
  </div>
</section><!--/Signup Section-->

